---
 - hosts: inventory file
   become: yes
   become_method: sudo
   tasks
   - name: installing apache
     yum:
       name: httpd
       state: latest
   tasks:
   - name: enabling httpd service
     service:
     name: httpd
     enabled: yes
   tasks
   - name: start ntpd service, if not running
     service:
     name: ntpd
     state: started, reloaded, stopped

#To uninstall a service
  tasks:
  - name: uninstalling apache
    yum:
    name: httpd
    state: absent
